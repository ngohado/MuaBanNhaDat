<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:rowCount="4">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_columnWeight="53"
            android:layout_marginRight="5dp"
            android:layout_row="0">

            <ImageView
                android:id="@+id/imv1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txtCost1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtAddress1"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/txtAddress1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtCity1"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/txtCity1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="15dp" />

            <ImageView
                android:id="@+id/imvFavorite1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favorite_border_white_36dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_column="4"
            android:layout_columnSpan="3"
            android:layout_columnWeight="47"
            android:layout_row="0">

            <ImageView
                android:id="@+id/imv2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txtCost2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtAddress2"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/txtAddress2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtCity2"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/txtCity2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_columnWeight="47"
            android:layout_marginTop="5dp"
            android:layout_row="1">

            <ImageView
                android:id="@+id/imv3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txtCost3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtAddress3"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/txtAddress3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtCity3"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/txtCity3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_column="3"
            android:layout_columnSpan="4"
            android:layout_columnWeight="53"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="1">

            <ImageView
                android:id="@+id/imv4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txtCost4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtAddress4"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/txtAddress4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtCity4"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/txtCity4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_column="0"
            android:layout_columnSpan="7"
            android:layout_marginTop="5dp"
            android:layout_row="2">

            <ImageView
                android:id="@+id/imv5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txtCost5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtAddress5"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/txtAddress5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtCity5"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/txtCity5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="15dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnSeeAll"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="7"
            android:layout_gravity="center"
            android:layout_row="3" />
    </GridLayout>

</RelativeLayout>