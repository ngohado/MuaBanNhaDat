<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/tv_close1"
        style="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/activity_vertical_margin"
        android:text="Đóng"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="90dp"
        android:text="Đăng ký"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout_Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_register"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_email_white_36dp"
            android:drawablePadding="8dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:theme="@style/EditTextStyleLogin" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etEmail"
            android:drawableLeft="@drawable/ic_lock_outline_white_36dp"
            android:drawablePadding="8dp"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:theme="@style/EditTextStyleLogin" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etPassword"
            android:drawableLeft="@drawable/ic_lock_outline_white_36dp"
            android:drawablePadding="8dp"
            android:hint="Xác nhận mật khẩu"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:theme="@style/EditTextStyleLogin" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etConfirmPassword"
            android:drawableLeft="@drawable/ic_account_box_white_36dp"
            android:drawablePadding="8dp"
            android:hint="Tên"
            android:textColor="@android:color/white"
            android:theme="@style/EditTextStyleLogin" />

        <EditText
            android:id="@+id/etTelephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etName"
            android:drawableLeft="@drawable/ic_local_phone_white_36dp"
            android:drawablePadding="8dp"
            android:hint="Điện thoại di động"
            android:inputType="phone"
            android:textColor="@android:color/white"
            android:theme="@style/EditTextStyleLogin" />

        <EditText
            android:id="@+id/etCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etTelephone"
            android:hint="Mã xác nhận"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:theme="@style/EditTextStyle"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/btnRegister"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout_Register"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_login"
        android:text="Đăng ký" />

    <TextView
        android:id="@+id/tv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Đăng nhập ngay"
        android:textColor="@android:color/white"
        android:textSize="15sp" />
</RelativeLayout>